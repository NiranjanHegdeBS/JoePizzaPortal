@model JoePizzaPortal.Models.Order

@{
    ViewData["Title"] = "Buy";
}

<div class="container justify-content-center w-50">
    <div class="card align-content-center justify-content-center">
        <div class="card-header text-center">
            <span class="card-title text-dark">Order Summary</span>
        </div>
        <div class="card-body justify-content-center">
            <table class="table table-responsive table-borderless justify-content-center">
                <tr>
                    <th>Pizza</th>
                    <td name="PizzaName">@ViewBag.PizzaName</td>
                </tr>
                <tr>
                    <th>Pizza Type</th>
                    <td name="Type">@ViewBag.Type</td>
                </tr>
                <tr>
                    <th>Size</th>
                    <td>Medium</td>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <td name="Quantity">@ViewBag.Quantity</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<hr />
<div class="container justify-content-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="CheckOut" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control" value="@ViewBag.PizzaName" name="PizzaName" hidden />
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@ViewBag.Type" name="type" hidden />
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@ViewBag.Quantity" name="Quantity" hidden />
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalAmount" class="control-label">Total Amount To Be Paid</label>
                        <input asp-for="TotalAmount" name="TotalAmount" class="form-control" value="@ViewBag.amount" readonly />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Card Holder Name</label>
                        <input class="form-control" type="text" name="CCName"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="CardNumber" class="control-label">Card Number</label>
                        <input asp-for="CardNumber" name="CardNumber" class="form-control" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShippingAddress" class="control-label">Shipping Address</label>
                        <textarea asp-for="ShippingAddress" id="ShipAddress" name="ShippingAddress" class="form-control"></textarea>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Enter CVV</label>
                        <input class="form-control" type="password" name="cvv" required />
                    </div>
                    <div class="form-group">
                        <button name="Submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>

                </form>
            </div>
        </div>
</div> 

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
